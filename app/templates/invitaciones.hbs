<div class="container invitacionRecibida borde-redondeado">

  <h3>Invitaciones recibidas</h3>

  {{#if hayInvitaciones}}
    <table class="table">

      <thead>
      <tr>
        <th>Nombre Evento</th>
        <th>Fecha</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>

      {{#each model as |invitacion|}}
        <tr>
          <td>{{invitacion.id_evento}} - {{invitacion.nombre_evento}}</td>
          <td>{{invitacion.fechaFormateada}}</td>
          <td>
            <button class="btn btn-md boton-pum" {{action 'verDetalleInvitacion' invitacion}}>Ver más...</button>
          </td>
          <td>
            {{#if invitacion.sin_confirmar }}
              <span class="label label-warning status">Todavía no confirmaste!</span>
              <button class="btn btn-md boton-pim" {{action 'aceptar' invitacion}}>Aceptar</button>
              <button class="btn btn-md boton-pim" {{action 'rechazar' invitacion}}>Rechazar</button>
            {{/if}}

            {{#if invitacion.aceptada }}
              <span class="label label-success status">Aceptada</span>
              <button class="btn btn-md boton-pim" {{action 'rechazar' invitacion}}>Rechazar</button>
            {{/if}}

            {{#if invitacion.rechazada }}
              <span class="label label-default status">Rechazada</span>
              <button class="btn btn-md boton-pim" {{action 'aceptar' invitacion}}>Aceptar</button>
            {{/if}}

          </td>
        </tr>
      {{/each}}

      </tbody>
    </table>

  {{else}}
    <p>Aún no has recibido invitaciones a eventos.</p>
  {{/if}}

</div>
